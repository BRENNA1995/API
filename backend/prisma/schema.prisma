generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comentario {
  comentario_filme_id       String     @id   @default(uuid())
  nome_usuario              String
  comentario_inserido       String
  data_inseriu_comentario   DateTime  @default(now())
  filme                      Filme[]
}

model Filme {
	  filme_id          String             @id   @unique
    comentario  		  Comentario        @relation(fields: [comentario_id], references: [comentario_filme_id])
    nomefilme         String
    comentario_id     String 
    sinopse           String
    data_lancamento   DateTime
    Nota              String 
    popularidade      String
    duracao           String  
}




