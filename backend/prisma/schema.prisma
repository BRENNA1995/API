generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Filme {
    comentario_filme_id  String @id   @unique
    nomefilme            String
    comentario  Comentario[]  
}


model Comentario {
  id                        String     @id   @default(uuid())
  nome_usuario              String
  comentario_inserido                String
  data_inseriu_comentario   DateTime  @default(now())
  comentario_filme_id       String
  comentario_filme_id2      Filme @relation(fields: [comentario_filme_id], references: [comentario_filme_id])
}





