generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comentario {
  comentario_filme_id       String     @id   @default(uuid())
  nome_usuario              String
  comentario_inserido       String
  data_inseriu_comentario   DateTime          @default(now())
  filme_id                  String   
  filme  		                Filme       @relation(fields: [filme_id], references: [filme_id]) 
}

model Filme {
	  filme_id          String             @id   @unique
    nomefilme         String 
    sinopse           String
    data_lancamento   DateTime
    Nota              String 
    popularidade      String
    duracao           String
    imageUrl          String
    comentario        Comentario[] 
}




