generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Filme {
  id         Int        @id 
  title      String    @unique
  sinopse    String
  poster     String
  imdbVotes  Float
  imdbRating Int
  createdAt  DateTime
  comments   Comment[]

  @@map("filmes")
}

model Usuario {
  id       Int       @id @default(autoincrement())
  username String
  email    String    @unique
  senha    String
  isAdmin  Boolean   @default(false)
  status   String

  @@map("usuarios")
}

model Comment {
  id        Int      @id @default(autoincrement())
  username  String   
  comment   String
  filmeId   Int
  createdAt DateTime @default(now())
  filme     Filme    @relation(fields: [filmeId], references: [id])

  @@map("comentarios")
}
